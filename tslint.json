{
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": false,
        "trailing-comma": [true, {
            "multiline": "always",
            "singleline": "never"
        }],
        "import-spacing": true,
        "quotemark": [true, "single"],
        "whitespace": [true,
            "check-module", 
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "member-access": [true, "no-public"],
        "object-literal-sort-keys": [true, "shorthand-first"],
        "no-invalid-template-strings": true,
        "max-classes-per-file": [true, 1, "exclude-class-expressions"],

        "ban-types": false,
        "interface-name": false,
        "no-empty-interface": false
    },
    "rulesDirectory": []
}